<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/annotation_toolbar_fragment"
        android:name="com.example.conducto2.ui.player.AnnotationToolbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/annotation_toolbar_fragment">

        <com.example.conducto2.ui.player.widget.SheetMusicView
            android:id="@+id/sheetMusicView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.conducto2.ui.player.widget.AnnotationView
            android:id="@+id/annotationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</RelativeLayout>