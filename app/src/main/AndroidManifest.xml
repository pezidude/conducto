<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" /> <!-- For older versions, and still good practice tohave -->
    <uses-permission android:name="android.permission.SET_ALARM" /> <!-- To ensure the alarm can run after the device reboots -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Conducto2"
        tools:targetApi="31">
        <activity
            android:name=".ui.classes.ClassEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.classes.ClassListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.lessons.LessonEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.lessons.ClassActivity"
            android:exported="false" />
        <activity
            android:name=".ui.player.MIDIPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:exported="false" />
        <activity
            android:name=".ui.HomeworkActivity"
            android:label="@string/title_activity_homework"
            android:exported="false" />

        <receiver
            android:name=".receivers.HeadsetReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.lessons.LessonDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receivers.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>